@using Educational_Center.Data.ViewModels;
@model List<TeacherUpdateViewModel>

@{
    ViewData["Title"] = "Teacher View";
}

<h2>Teacher View</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Courses</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Teacher.TeacherId</td>
                <td>@teacher.Teacher.FirstName @teacher.Teacher.LastName</td>
                <td><img style="max-height: 500px; max-width: 500px" src="@teacher.Teacher.Photo" alt="teacher photo" /></td>
                <td>
                    @foreach (var item in teacher.Courses)
                    {
                       <p>@item.CourseName </p>
                    }
                </td>
                <td>
                    <a asp-controller="User" asp-action="TeacherUpdate" asp-route-teacherId="@teacher.Teacher.TeacherId" class="btn btn-warning">Edit</a>
                    <a asp-controller="User" asp-action="TeacherDelete" asp-route-teacherId="@teacher.Teacher.TeacherId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this teacher?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="User" asp-action="TeacherCreate" class="btn btn-primary">Create Teacher</a>
